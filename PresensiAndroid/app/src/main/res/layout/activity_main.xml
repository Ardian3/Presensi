<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/bg_app" tools:context=".MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_margin="20px">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NIP KARYAWAN"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="NIP"
                android:id="@+id/txNIPhome"
                android:layout_gravity="center_horizontal"
                android:textColor="#EEEEEE" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="3pt"
            android:layout_marginRight="3pt"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginTop="20pt">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/btnHomeMasuk"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@mipmap/btn_masuk"
                android:layout_marginTop="10pt" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/btnHomePulang"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@mipmap/btn_pulang"
                android:layout_marginTop="10pt"
                />
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/btnHomeKeluar"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@mipmap/btn_keluar"
                android:layout_marginTop="10pt"/>

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/btnHomeCuti"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@mipmap/btn_cuti"
                android:layout_marginTop="10pt"/>
        </GridLayout>

    </FrameLayout>

</FrameLayout>
